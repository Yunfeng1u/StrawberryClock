<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="true">
        <shape>
            <stroke android:width="@dimen/small_stroke" android:color="@color/pure_white" />
            <solid android:color="@color/transparent_half_grey_color" />
            <corners android:radius="@dimen/half_circle_radius" />
        </shape>
    </item>
    <item android:state_enabled="false">
        <shape>
            <stroke android:width="@dimen/small_stroke" android:color="@color/dark_grey_color_0" />
            <solid android:color="@color/light_grey_color" />
            <corners android:radius="@dimen/half_circle_radius" />
        </shape>
    </item>
</selector>