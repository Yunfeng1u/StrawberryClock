<resources>

    <style name="light_button_style" parent="dark_grey_text_style">
        <item name="android:background">@drawable/shape_circle_button</item>
        <item name="android:padding">@dimen/small_3_space</item>
        <item name="android:layout_margin">@dimen/small_3_space</item>
    </style>

    <style name="normal_button_style" parent="dark_grey_text_style">
        <item name="android:background">@drawable/shape_normal_button</item>
        <item name="android:padding">@dimen/small_3_space</item>
        <item name="android:textSize">@dimen/small_5_text_size</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="light_button_layout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/action_bar_size</item>
        <item name="android:background">@drawable/shape_circle_button</item>
        <item name="android:padding">@dimen/medium_1_space</item>
        <item name="android:layout_marginTop">@dimen/medium_1_space</item>
        <item name="android:layout_marginBottom">@dimen/medium_1_space</item>
        <item name="android:layout_marginStart">@dimen/medium_3_space</item>
        <item name="android:layout_marginEnd">@dimen/medium_3_space</item>
    </style>

    <style name="repeat_mode_style" parent="white_text_style">
        <item name="android:background">@drawable/shape_selector_repeat</item>
        <item name="android:button">@null</item>
        <item name="android:textSize">@dimen/small_1_text_size</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:paddingTop">@dimen/tiny_1_space</item>
        <item name="android:paddingBottom">@dimen/tiny_1_space</item>
        <item name="android:paddingStart">@dimen/small_2_space</item>
        <item name="android:paddingEnd">@dimen/small_2_space</item>
    </style>

    <style name="repeat_days_style" parent="dark_grey_text_style">
        <item name="android:background">@drawable/shape_selector_week</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/text_selector_week</item>
    </style>

</resources>
