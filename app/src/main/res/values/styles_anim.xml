<resources>

    <style name="AnimActivity" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/slide_left_in</item>
        <item name="android:activityOpenExitAnimation">@null</item>
        <item name="android:activityCloseEnterAnimation">@null</item>
        <item name="android:activityCloseExitAnimation">@anim/slide_right_out</item>
    </style>

    <!-- 上下弹出的动画效果-->
    <style name="AnimBottom" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/push_bottom_in</item>
        <item name="android:windowExitAnimation">@anim/push_bottom_out</item>
    </style>

    <style name="top_in_bottom_out_animation">
        <item name="android:windowEnterAnimation">@anim/slide_top_in</item>
        <item name="android:windowExitAnimation">@anim/slide_bottom_out</item>
    </style>
</resources>
